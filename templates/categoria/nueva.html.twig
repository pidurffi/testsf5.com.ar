{% extends 'base.html.twig' %}

{% block contenedor_principal %}
  {% for tipo, mensajes in app.flashes %}
    {% for mensaje in mensajes %}
    <div class="alert alert-{{ tipo }} alert dismissible fade show">
      {{ mensaje }}
      <button type="close" class="close" data-dismiss="alert" aria-label="close"></button>
    </div>
    {% endfor %}
  {% endfor %}
<form method="POST">
  
  <div class="form-group">
    <label for="nombre">Nombre</label>
    <input type="text" class="form-control" value="{{ categoria.nombre }}" name="nombre" id="nombre" placeholder="Nombre">
  </div>

  <!-- <div class="form-group">
    <label for="color">Color</label>
    <input type="text" class="form-control" value="" name="color" id="nombre" placeholder="Color">
  </div> -->
  
  <input type="hidden" name="_token" value="{{csrf_token('categoria')}}">
  <button type="submit" class="btn btn-outline-success">Guardar</button>

</form>

{% endblock %}